{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 20
    },
    "fullName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "role": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    }
  },
  "additionalProperties": false,
  "required": ["email", "password", "fullName", "role"]
}
